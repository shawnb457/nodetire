	<!-- LOGIN FORM -->
    <div class="account-container stacked">
    
    <div class="content clearfix">
        
        <form action="/signup" method="post">
        
            <h1>Create Account</h1>        
            
            <div class="login-fields">
                
                
                 <div class="field">
                    <label for="username">First Name:</label>
                    <input type="text" class="form-control input-lg username-field" placeholder="First Name" name="first">
                </div>
                <div class="field">
                    <label for="username">Last Name:</label>
                    <input type="text" class="form-control input-lg username-field" placeholder="Last Name" name="last">
                </div>
                
                <div class="field">
                    <label for="username">Email:</label>
                    <input type="text" class="form-control input-lg username-field" placeholder="Email/UserName" name="email">
                </div> <!-- /field -->
                    
                <div class="field">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" value="" placeholder="Password" class="form-control input-lg password-field"/>
                </div>
                 <div class="field">
                    <label for="password">Confirm Password:</label>
                    <input type="password" id="confirmpassword" name="confirmpassword" value="" placeholder="Confrim Password" class="form-control input-lg password-field"/>
                </div>
                <div class="field">
                    <label for="password">Role:</label>
                        <select class="form-control" data-style="btn-primary" >
                            <option selected> Select a Role</option>
                            <option>Admin</option>
                            <option>Tech</option>
                            <option>Viewer</option>
                            <option>Sales</option>
                        </select>
                </div> <!-- /password -->
             
            </div> <!-- /login-fields -->
            
            <div class="login-actions"> 
                
                <span class="login-checkbox">
                    <input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
                    <label class="choice" for="Field">I have read and agree with the Terms of Use. </label>
                </span>
                 <button type="submit" class="login-action btn btn-primary">Create Account</button> 
                 <button type="submit" class="login-action btn btn-primary">Back to Login</button>                   
               
                
            </div> <!-- .actions -->
            
            
            
        </form>
        
    </div> <!-- /content -->
    
</div> <!-- /account-container -->


</body>
</html>	


